<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:orientation="vertical"
    tools:context=".agregar_Inventario">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="Administrar inventario"
        android:textColor="#FFC948"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ETgId"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#FFC948"
            android:ems="10"
            android:hint="Ingrese ID"
            android:inputType="number"
            android:textColor="#f9fcfb"
            android:textColorHint="#bbbbbb" />

        <Button
            android:id="@+id/BgBuscar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:background="@drawable/boton_redondeado"
            android:text="Buscar"
            android:textColor="#393e46" />

        <Button
            android:id="@+id/BgNuevo"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:background="@drawable/boton_redondeado"
            android:text="Nuevo"
            android:textColor="#393e46" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombreTxt"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:text="Nombre:"
            android:textColor="#FFC948"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETgNombre"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#FFC948"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="#f9fcfb"
            android:textColorHint="#bbbbbb" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cantA"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Descripción:"
            android:textColor="#FFC948"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETgDescripcion"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#FFC948"
            android:ems="10"
            android:hint="Descripción del artículo"
            android:inputType="text"
            android:textColor="#f9fcfb"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/compt"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Cantidad:"
            android:textColor="#FFC948"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETgCantidad"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#FFC948"
            android:ems="10"
            android:hint="Cantidad de articulos"
            android:inputType="number"
            android:textColor="#f9fcfb"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/VenT"
            android:layout_width="98dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Categoría:"
            android:textColor="#FFC948"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETgCategoria"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#FFC948"
            android:ems="10"
            android:hint="Categoría del articulo"
            android:inputType="text"
            android:textColor="#f9fcfb"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/BgEliminar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondeado"
            android:text="Eliminar"
            android:textColor="#393e46" />

        <Button
            android:id="@+id/BgEditar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/boton_redondeado"
            android:text="Editar"
            android:textColor="#393e46" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/BgRegistrar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/boton_redondeado"
            android:text="Registrar"
            android:textColor="#393e46" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/BgListar"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/boton_redondeado"
            android:onClick="IrListar"
            android:text="Lista"
            android:textColor="#393e46" />
    </LinearLayout>

</LinearLayout>