<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    tools:context=".planesPreventivos">

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="Planes Preventivos y Correctivos"
            android:textColor="#FFC948"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="410dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="115dp">

        <TextView
            android:id="@+id/nom_planes4"
            android:layout_width="370dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#FFF29E"
            android:text="Nombre..."
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="321dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="191dp">

        <TextView
            android:id="@+id/descrip_planes2"
            android:layout_width="368dp"
            android:layout_height="323dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#FFF29E"
            android:text="Descripcion..."
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="549dp">

        <Button
            android:id="@+id/btn_agregar2"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/boton_redondeado"
            android:text="Agregar"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="543dp" />

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:background="@drawable/boton_redondeado"
            android:text="Editar"
            android:textColor="#393e46"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="63dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="639dp">

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="ELIMINAR" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>